CONFIGURAR E CRIAR BANCO DE DADOS

create database teste
default character set utf8     
default collate utf8_general_ci;    

CRIAR TABELAS

create table Conteiner (
Id INT not null auto_increment,
Cliente varchar (20) not null,
Numero_Conteiner varchar(11) not null,
Tipo char(2),
condição enum('cheio', 'vazio'),
Categoria enum('importação','exportação'),
primary key (ID)
);

create table Movimentações (
Tipo_Movimentaçao enum ('embarque', 'descarga', 'gate in', 'gate
out', 'reposicionamento', 'pesagem', 'scanner')
Data_Inicial date,
Data_Final date,
Hora_Inicial time,
Hora_Final time
);

INSERIR DADOS

insert into conteiner values
('1', 'Paulo', 'Paul1234567', '20', 'cheio', 'importação');

insert into movimentações values
('embarque', '2022-10-10', '2022-11-09', '13:05:02', '13:08:02');

SELECIONAR/VISUALIZAR DADOS

select * from  conteiner;
select * from movimentações;

ATUALIZAR DADOS

UPDATE Conteiner
SET NumConteiner = 'TEST7839323'
WHERE id = '1'

ADCIONAR TABELAS

alter table
add column

ADICIONAR COLUNA ESCOLHERNDO A POSIÇÃO DELA

alter table varchar (10) AFTER cliente
add column

ADICIONAR COLUNA NA PRIMEIRA OPÇÃO

alter table
add column numero int FIRST

MODIFICAR A ESTRUTURA DE DEFINIÇÃO DA TABELA

alter table
modify column pessoas VARCHAR(11)

ALTERAR NOME DA COLUNA

alter table 
chance column pessoas HUMANOS varchar(11)

ALTERAR NOME DA TABELA 

alter table 
rename to Baldes

EXCLUIR TABELA

drop table

EXCLUIR DADOS 

delete from Conteiner
where id = '1'

EXCLUIR TABELA

drop table conteiner



