SELECIONANDO COLUNAS ORDENANDO POR PARAMETROS

select * from cursos
order by Nome;

SELECIONANDO COLUNAS ORDENANDO POR PARAMETROS POR ORDEM DECRESCENTE OU CRESCENTE

select * from cursos
order by Nome DESC;

select * from cursos
order by Nome ASC;

SELECIONADO COLUNAS SEM SELECIONAR TODA A BASE DE DADOS

select nome, carga, ano from cursos
order by nome, carga;

SELECIONANDO COLUNAS FILTRANDO LINHAS

select * from cursos
where ano = '2016'
order by nome;

SELECIONANDO COLUNAS COM OPERADORES LÓGICOS

select nome, carga, ano from cursos
where ano <= 2015
order by nome, carga;

select nome, carga, ano from cursos
where ano != 2015
order by nome, carga;

select nome, carga, ano from cursos
where ano !<> 2015
order by nome, carga;

select nome, carga, ano from cursos
where totaulas BETWEEN '20' AND '30'
order by nome;

select nome, descrição, ano from cursos
where ano IN (2014, 2016)
order by ano;

select * from cursos
where carga > 35 AND totaulas < 30;

SELECIOANDO DADOS COM CORINGA e operador LIKE(significa parecido)

select * from cursos
where nome LIKE '%A'

select * from cursos
where nome LIKE 'A%'

select * from cursos
where nome NOT LIKE 'A%'

select * from cursos
where nome LIKE 'PH%P'

select * from cursos
where nome LIKE 'PH%P%'

select * from cursos
where nome LIKE 'PH%P%_';

SELECIONANDO COM DISITNÇÃO USANDO O COMANDO DISTINCT 

select DISTINCT nacionalidade from
order by nacionalidade;

SELECIONANDO COM FUNÇÕES DE AGREGAÇÃO

select COUNT (*) from cursos where carga > 40;

select COUNT (nome) from cursos;

select MAX(carga) from cursos;

select MIN(carga) from cursos;

select SUM(totaulas) from cursos;

select AVG(totaulas) from cursos;

SELECIONANDO DADOS COM AGRUPAMENTO

select carga, COUNT(nome) cursos
GROUP BY carga;

select carga, COUNT(nome) from cursos where totaulas = 30
gruoup by carga;

select profissao, count(*) from gafanhotos
group by profissao desc;

select sexo,count(*) from gafanhotos
where nascimento > '2005-01-01'
group by sexo;


AGRUPANDO COM HAVING

select ano, count(*) from cursos
group by ano
HAVING ano > 2013
order by count(*) desc;

select nacionalidade,count(*)from gafanhotos 
where nacionalidade <> 'brasil'
group by nacionalidade
having count(nacionalidade ) >'3';

select altura,count(*) from gafanhotos
where peso > '100'
group by altura
having altura > (select avg(altura)from gafanhotos);



